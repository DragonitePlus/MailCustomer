<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:label="简易邮箱"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity android:name="com.example.mailCustomer.LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mailCustomer.HomeActivity" />
        <activity android:name="com.example.mailCustomer.RegisterActivity" />
        <activity android:name="com.example.mailCustomer.InboxActivity" />
        <activity android:name="com.example.mailCustomer.SendMailActivity" />
        <activity android:name="com.example.mailCustomer.EmailDetailActivity" />
        <activity android:name="com.example.mailCustomer.ServerManagementActivity" />
        <activity android:name="com.example.mailCustomer.UserManagementActivity" />
        <activity android:name="com.example.mailCustomer.PersonalInfoActivity" />
    </application>

</manifest>
